@page
@using DataAccessingService.ContentManagementService
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    var carouselItems = HomeContentController.GetHomeCarouselItems();
}

<div
    class="carousel slide"
    data-bs-ride="carousel"
    id="homeCarousel"
>
    <ol
        class="carousel-indicators" 
    >
        @for(var index = 0; index < carouselItems.Count; ++index)
        {
            <li
                class="@(index == 0 ? "active" : "")"
                data-bs-slide-to="@index"
                data-bs-target="#homeCarousel" >
            </li>
        }
    </ol>
    <div
        class="carousel-inner"
        role="listbox"
    >
        @for(var index = 0; index < carouselItems.Count; ++index)
        {
            <!-- TODO: Implement video case... -->
            <div
                class="@(index == 0 ? "active" : "") carousel-item" 
                style="
                    height: 100vh;
                    background: no-repeat center scroll;
                    background-size: cover;
                    background-image: url('@carouselItems[index].SourceURL');
                "
            >
                @* <img *@
                @*     alt="@carouselItems[index].AlternateText" *@
                @*     class="d-block mx-auto img-fluid w-100" *@
                @*     src="@carouselItems[index].SourceURL"  *@
                @* > *@
                @* TODO: Implement a title and description?  *@
                @* <div *@
                @*     class="carousel-caption bg-dark" *@
                @* > *@
                @*     <h5>@carouselItems[index].Title</h5> *@
                @*     <p>@carouselItems[index].Description</p> *@
                @* </div> *@
            </div>
        }
        <a
            class="carousel-control-prev"
            data-bs-slide="prev"
            href="#homeCarousel"
            role="button" 
        >
            <span
                aria-hidden="true"
                class="carousel-control-prev-icon" >
            </span>
            <span
                class="visually-hidden" 
            >
                Previous
            </span>
        </a>
        <a
            class="carousel-control-next"
            data-bs-slide="next"
            href="#homeCarousel"
            role="button" 
        >
            <span
                aria-hidden="true"
                class="carousel-control-next-icon" >
            </span>
            <span
                class="visually-hidden" >
                Next
            </span>
        </a>
    </div>
</div>